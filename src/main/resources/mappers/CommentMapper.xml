<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sixesSense.recorder.review.query.domain.repository.CommentMapper">

    <resultMap id="commentResultMap" type="com.sixesSense.recorder.review.query.application.dto.response.ReadCommentResponse">
        <id property="commentNo" column="comment_no"/>
        <result property="commentContent"  column="comment_content"/>
        <result property="memberNo" column="member_no"/>
        <result property="review" column="review_no"/>
    </resultMap>


    <!-- 전체 댓글 조회 -->
    <select id="commentList" resultMap="commentResultMap">
        select c.member_no, c.comment_content
        from comment c
        where c.review_no = #{ reviewNo }
    </select>
</mapper>